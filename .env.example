# Pixaro Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pixaro
# For production (MongoDB Atlas), use:
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/pixaro?retryWrites=true&w=majority

# Session Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Application Environment
NODE_ENV=development
# For production, use:
# NODE_ENV=production

# Server Port
PORT=3000
# For Render deployment, use:
# PORT=10000

# Optional: File Upload Configuration
# CLOUDINARY_CLOUD_NAME=your-cloudinary-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Optional: Email Configuration (for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
